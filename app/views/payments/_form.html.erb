<div class='col-md-4 col-md-offset-4'>
<div class="panel panel-default">
   <div class="panel-body">
      <h4>Payment Breakdown </h4>
      <hr>
      <p class="label-info-tax">Local Taxes </p>

      <p>Business Tax<span class="pull-right"><%=@business.capital_tax %> </span></p>
   <% unless @business.gross_sales.blank? %>
         <p>Gross Sales Tax<span class="pull-right"><%=@business.gross_sales_taxes_amount %> </span></p>
  <% end %>
      <hr>
      <p class="label-info-tax">Regulatory Fees and Charges</p>
            <p>Mayors Permit Fee: <span class="pull-right"><%=@business.mayors_permit_fee_amount %></span></p>
      <hr>
      <p>Subtotal: <span class="pull-right"><%=@payment.subtotal %></span></p>
      <p>Exemptions: <span class="pull-right"><%=@payment.exemption %></span></p>
      <p>Surcharges: <span class="pull-right"><%=@payment.surcharge %></span></p>
      <hr>
      <p>AMOUNT TO PAY <span class="pull-right"><%=@payment.total %></span></p>
      <hr>
      <%=simple_form_for [@business, @payment] do |f| %>
        <%=f.input :official_receipt_number %>
        <div class="modal-footer">
          <%=f.submit 'Register Payment ', class: 'btn btn-primary'%>
        </div>
      <% end %>
    </div>
  </div>
</div>

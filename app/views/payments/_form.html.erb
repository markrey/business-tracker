<div class='col-md-4 col-md-offset-4'>
<div class="panel panel-default">
   <div class="panel-body">
      <h4>Payment Breakdown </h4>
      <hr>
      <p class="label-info-tax">Taxes, Fees and Other Charges</p>
      <%=@business.business_name.upcase %>
      <p>Subtotal: <span class="pull-right"><%=@payment.subtotal %></span></p>
      <p>Exemptions: <span class="pull-right"><%=@payment.exemption %></span></p>
      <p>Surcharges: <span class="pull-right"><%=@payment.surcharge %></span></p>
      <hr>
      <p>AMOUNT TO PAY <span class="pull-right"><%=@payment.total %></span></p>
      <hr>
      <%=simple_form_for [@business, @payment] do |f| %>
        <%=f.input :amount, autofocus: true %>
        <%=f.input :official_receipt_number %>
        <div class="modal-footer">
          <%=f.submit 'Register Payment ', class: 'btn btn-primary'%>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%if Payment.count.zero? %>
<p>No Payments have been registered yet.</p>
<% else %>
    <div class="row">
      <div class="col-md-8">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-hover table-condensed">
                <thead>
                  <tr>
                    <th> Taxpayer</th>
                    <th>Date of Payment</th>
                    <th>Amount</th>
                    <th>O.R. Number</th>
                    <th>Collecting Officer</th>

                  </tr>
                </thead>
                <tbody>
                  <% @payments.each do |payment| %>
                    <tr>
                      <td><%=payment.business.try(:taxpayer_name)%></td>
                      <td><%=payment.created_at.strftime('%B %d %Y')%></td>
                      <td class="pull-right"><%=number_to_currency(payment.amount, unit: ' P ' )%></td>
                      <td><%=payment.official_receipt_number %></td>
                      <td><%=payment.collecting_officer%></td>
                    </tr>
                  <%end%>
                </tbody>
              </table>
            </div>
           </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="well">
         <h3>Collection Details</h3>
      <hr>
          <p>Collection: <%=number_to_currency(@payments.collection_amount, unit: ' P ')%></p>
        </div>
      </div>
    </div>
<% end %>

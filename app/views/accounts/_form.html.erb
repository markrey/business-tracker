<div class="col-md-4 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-body">
      <h2>Create an Account</h2>
      <%=simple_form_for @account do |f| %>
        <%=f.simple_fields_for :owner do |o| %>
           <%=o.input :first_name %>
           <%=o.input :last_name %>
           <%=o.input :email %>
           <%=o.input :password %>
           <%=o.input :password_confirmation %>
         <% end %>
         <%=f.input :subdomain do %>
           <div class="input-group">
             <%=f.input_field :subdomain, class: 'form-control', placeholder: "Name of LGU" %>
             <span class="input-group-addon">.business-tracker.ph</span>
             <!--<p class="help-block">Name of Local Goverment Unit </p>-->
           </div>
         <% end %>
         <div class="modal-footer">
           <%=f.button :submit, class: 'btn btn-primary'%>
         </div>
       <% end %>
     </div>
  </div>
</div>

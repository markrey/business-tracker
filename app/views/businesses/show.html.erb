                    <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                  </div>
                </div><!-- /.box-header -->
                <div class="box-body">
        <thead>
          <tr>
            <th>Amount</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @business.payments.each do |payment| %>
            <tr>
              <td><%= number_to_currency(payment.amount, {:unit =>'PHP '}) %> </td>
              <td> <%= payment.created_at.strftime('%B %d %Y %H:%M %R') %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>

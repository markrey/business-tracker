<%provide(:title, "#{@business.business_name}") %>

<section class="content">

  <div class="row">
    <div class="col-md-3">

      <!-- Profile Image -->
      <div class="box box-primary">
        <div class="box-body box-profile">
          <%= attachment_image_tag(@business, :logo, :fill, 128, 128, fallback: "missing.png", class: "profile-user-img img-responsive img-circle", alt: "User profile picture") %>
          <h3 class="profile-username text-center"><%= @business.business_name %></h3>
          <p class="text-muted text-center"><%= @business.address %></p>

          <ul class="list-group list-group-unbordered">
            <li class="list-group-item">
              <b>Outstanding Balance</b> <a class="pull-right badge badge-danger">1,322</a>
            </li>
            <li class="list-group-item">
              <b>Owned By</b> <a class="pull-right"><%=@business.taxpayer_full_name %></a>
            </li>
            <li class="list-group-item">
              <b>Permit Status</b> <a class="pull-right label bg-green">Approved</a>
            </li>
          </ul>

          <%=link_to "Update", edit_business_path(@business), class: "btn btn-primary btn-block" %>
        </div><!-- /.box-body -->
      </div><!-- /.box -->

      <!-- About Me Box -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">About <%=@business.business_name.to_s.titleize %></h3>
        </div><!-- /.box-header -->
        <div class="box-body">
          
          <strong><i class="fa fa-map-marker margin-r-5"></i> Permit Status</strong>
          <p class="text-muted"><%=@business.status.to_s.titleize %><%=@business.created_at %></p>

          <hr>

          <strong><i class="fa fa-pencil margin-r-5"></i> Lines of Business</strong>
          <p class="text-muted">Multipurpose Cooperative</p>


          <hr>

          <strong><i class="fa fa-file-text-o margin-r-5"></i> Notes</strong>
          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam fermentum enim neque.</p>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Registration Details</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
          <strong><i class="fa fa-book margin-r-5"></i>  DTI Registration</strong>
          <p class="text-muted">
            DTI Certification Number 67890-0098-776
          </p>

          <hr>

          <strong><i class="fa fa-book margin-r-5"></i>  BIR Registration</strong>
          <p class="text-muted">
            BIR Certification Number 67890-0098-776
          </p>

          <hr>

          <strong><i class="fa fa-map-marker margin-r-5"></i> Permit Status</strong>
          <p class="text-muted"><%=@business.status.to_s.titleize %><%=@business.created_at %></p>

          <hr>

          <strong><i class="fa fa-pencil margin-r-5"></i> Lines of Business</strong>
          <p class="text-muted">Multipurpose Cooperative</p>


          <hr>

          <strong><i class="fa fa-file-text-o margin-r-5"></i> Notes</strong>
          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam fermentum enim neque.</p>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div><!-- /.col -->
    <div class="col-md-9">

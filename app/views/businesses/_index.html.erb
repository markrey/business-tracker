<br>
<div class="tab-pane active" id="profile">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-hover table-condensed">
                <thead>
                  <tr>
                    <th> Business Name</th>
                    <th>Date Registered</th>
                    <th>Owner</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% @businesses.each do |business| %>
                    <tr>
                      <td><%=link_to truncate(business.business_name.upcase, length: 30), business, class: 'btn btn-link'%></td>
                      <td><%=business.created_at.strftime('%B %d %Y')%></td>
                      <td class="data-halign="center" data-align="left""><%= business.taxpayer_name %></td>
                      <td><%= business.workflow_state.humanize %></td>
                      <td>
                      <% if business.payment_pending? %>
                       <%=link_to 'Pay', new_business_payment_path(business)%>
                       <% end %>
                         <% if business.expired? %>
                       <%=link_to 'Renew', renew_business_path(business), method: :get %>
                       <% end %>

                      </td>
                    </tr>
                  <%end%>
                </tbody>
              </table>
            </div>
           </div>
        </div>
      </div>
    </div>
  </div>

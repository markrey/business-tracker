<br>

    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-hover table-condensed">
                <thead>
                  <tr>
                    <th> Business Name</th>
                    <th>Owner</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% @businesses.each do |business| %>
                    <tr>
                      <td><%=link_to truncate(business.business_name.upcase, length: 30), business, class: 'btn btn-link'%></td>
                      <td class="data-halign="center" data-align="left""><%= business.taxpayer_name %></td>
                      <td><%=business.status.titleize%></td>
                      <td>
                      <% if business.payment_pending?  %>
                       <%=link_to 'Pay', new_business_payment_path(business)%>
                       <% end %>
                         <% if business.expired? %>
                       <%=link_to 'Renew', renew_business_path(business), method: :get%>
                       <% end %>

                        <% if business.delinquent? %>
                       <%=link_to 'Pay Dues', renew_business_path(business)%>
                       <% end %>
                       <% if business.registered? && current_user.system_administrator? && business.line_of_businesses.present?%>
                       <%=link_to ' Print Mayors Permit', business_path(business, format: "pdf"), class: " btn  fa fa-print" %>
                       <% end %>


                      </td>
                    </tr>
                  <%end%>
                </tbody>
              </table>
            </div>
           </div>
        </div>
      </div>
    </div>


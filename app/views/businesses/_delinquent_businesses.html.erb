<br>

    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-hover table-condensed">
                <thead>
                  <tr>
                    <th> Business Name</th>
                    <th>Owner</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% @businesses.delinquent.each do |business| %>
                    <tr>
                      <td><%=link_to truncate(business.business_name.upcase, length: 40), business, class: 'text-danger'%></td>
                      <td class="data-halign="center" data-align="left""><%= business.taxpayer_name %></td>
                      <td>
                       <%=link_to 'Pay Dues', renew_business_path(business)%>
                      </td>
                    </tr>
                  <%end%>
                </tbody>
              </table>
            </div>
           </div>
        </div>
      </div>
    </div>


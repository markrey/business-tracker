<div class="col-md-10 col-md-offset-2">
<% if Business.count.zero? %>
  <p class="alert alert-info">
     No businesss are registered yet.
    <%=link_to "Add New business", new_business_path, class: "btn btn-link" %></p>


<% else %>
<div class="well well-sm">

  <%=link_to ' New Business', new_business_path, class: "btn btn-primary fa fa-marker" %>
</div>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-hover table-condensed">
        <thead>
          <tr>
            <th> Business Name</th>
            <th>Date Registered</th>
            <th>Owner</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% @businesses.each do |business| %>
            <tr>
              <td><%=link_to business.business_name, business, class: 'btn btn-link'%></td>
              <td><%=business.created_at.strftime('%B %d %Y')%></td>
              <td class="data-halign="center" data-align="left""><%= business.owner_name %></td>
              <td><%= business.workflow_state %></td>
              <td>
                <div class="btn-group">
                  <button type="button" class="glyphicon glyphicon-cog" data-toggle="dropdown" data-toggle="tooltip" title="More User Actions">
                  </button>
                  <ul class="dropdown-menu pull-right" role="menu">
                    <li><%= link_to ' Pay Taxes', new_business_payment_path(business), class: 'fa fa-android' %></li>
                    <li><%= link_to ' New Cedula', new_business_path(business), class: 'fa fa-android' %></li>
                    <li><%= link_to ' New Business', new_business_path(business), class: 'fa fa-android' %></li>
                  </ul>
                </div>
              </td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
   </div>
</div>
<% end %>

<br>
<div class="well well-sm">
<%=link_to 'New Taxpayer', new_taxpayer_path, class: 'btn btn-primary btn-sm' %>
<div class="btn-group">


 <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
     <i class="fa fa-cog">  </i> <span class="caret"> </span>
  </button>
                  <ul class="dropdown-menu pull-right" role="menu">
                    <li><%= link_to ' Delinquent Businesses'%></li>
                  </ul>
</div>
<div class="btn-group">


 <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    More <span class="caret"></span>
  </button>
                  <ul class="dropdown-menu pull-right" role="menu">
                    <li><%= link_to 'Savings'%></li>
                    <li><%= link_to 'Loans'%></li>
                    <li><%= link_to 'Share Capital'%></li>
                  </ul>
</div>
</div>
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-hover table-condensed">
                <thead>
                  <tr>
                    <th> Business Name</th>
                    <th>Owner</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% @businesses.each do |business| %>
                    <tr>
                      <td><%=link_to truncate(business.business_name.upcase, length: 30), business, class: 'text-success'%></td>
                      <td><%= link_to business.taxpayer_name, taxpayer_path(id: business.taxpayer.id) %></td>
                      <td><%=business.status%></td>
                      <td>
                      <% if business.payment_pending?  %>
                       <%=link_to 'Pay', new_business_payment_path(business)%>
                       <% end %>
                         <% if business.expired? %>
                       <%=link_to 'Renew', renew_business_path(business), method: :get%>
                       <% end %>

                        <% if business.delinquent? %>
                       <%=link_to 'Pay Dues', renew_business_path(business), method: :get %>
                       <% end %>
                       <% if business.registered? && current_user.system_administrator? && business.line_of_businesses.present?%>
                       <%=link_to ' Print Mayors Permit', business_path(business, format: "pdf"), class: " btn  fa fa-print" %>
                       <% end %>


                      </td>
                    </tr>
                  <%end%>
                </tbody>
              </table>
              <div class="pagination">
            <%= will_paginate @businesses %>
              </div>
            </div>
           </div>
        </div>
      </div>
    </div>


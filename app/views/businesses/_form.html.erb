
<div class='col-md-10 col-md-offset-1'>
  <div class="panel panel-default">
    <div class="panel-body">
    <h3>Business Details </h3>
    <hr>
      <%= simple_form_for [@taxpayer, @business], html: { class: 'form-horizontal' },
wrapper: :horizontal_form,
wrapper_mappings: {
check_boxes: :horizontal_radio_and_checkboxes,
radio_buttons: :horizontal_radio_and_checkboxes,
file: :horizontal_file_input,
boolean: :horizontal_boolean
} do |f| %>
<%=f.error_notification %>
          <div class="row">
            <div class="col-md-6">
              <%=f.input :business_name  %>



               <%=f.association :type_of_organization, collection: TypeOfOrganization.ownership_types.keys.to_a.map{|t| [t.titleize, t]} %>


              <%=f.input :asset_size%>

              <%=f.input :no_of_employees, label: 'Number of Employees' %>
            </div>

            <div class="col-md-6">
               <%=f.input :industry_type, collection: Business.industry_types.keys.to_a.map{ |a| [a.titleize, a]} %>

              <%=f.input :application_date, as: :string, input_html: { class: "datepicker" }, default: Date.current, placeholder: 'mm/dd/yyyy' %>

              <%=f.input :dti_sec_reg_no, label: 'DTI/SEC Registration Number' %>

              <%=f.input :permit_number%>

              <%=f.input :dti_sec_reg_date, as: :string, input_html: { class: "datepicker" },  placeholder: 'mm/dd/yyyy'  %>
              <%=f.input :rented, as: :boolean, inline_label: 'Renting' %>

          <%=f.input :franchised, as: :boolean, inline_label: 'Franchise.' %>

          <%=f.input :branch, as: :boolean, inline_label: 'Branch.' %>


            </div>
          </div>
 <h3>Address Details</h3>
<hr>
        <%=f.simple_fields_for :address do |a| %>
           <div class="row">
           <div class="col-md-6">
        <%=a.input :street %>
        <%=a.input :house_number_or_bldg_number, label: 'House number' %>
        <%=a.input :building_name %>
        <%=a.input :unit_number %>
        </div>
        <div class="col-md-6">
        <%=a.input :street %>
        <%=a.input :barangay %>
        <%=a.input :subdivision %>
        <%=a.input :municipality_or_city %>
        <%=a.input :province %>
        </div>
        </div>
        <% end %>


        <div class="modal-footer">
        <% if @business.new_record? %>
        <%=f.button :submit, 'Register Taxpayer', class: 'btn btn-primary' %>
        <% else %>
         <%=f.button :submit, 'Update Taxpayer' %>
        <% end %>

    </div>
  </div>
</div>

        <% end %>

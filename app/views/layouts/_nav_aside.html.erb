<aside class="main-sidebar">
  <section class="sidebar">
  <!-- Sidebar user panel -->
    <div class="user-panel">
      <div class="pull-left image">
        # <%# if current_user.profile_image.blank? %>
        #   <%#= image_tag attachment_url(current_user, :profile_image, :fill, 40, 40), class: 'img-circle' %>
        # <%# end %>
      </div>
      <div class="pull-left info">
        <p><%=current_user.first_name %></p>
        <a href="#"><%=current_user.role.humanize %></a>
      </div>
    </div>
    <!-- search form -->
    <%=form_tag taxpayers_path, class: 'sidebar-form', method: :get do %>
      <div class="input-group">
        <%=text_field_tag :query, params[:query], class: 'form-control', placeholder: 'Search  for Taxpayer' %>
        <span class="input-group-btn">
          <%= button_tag(type: 'submit', class: "btn btn-flat") do %>
            <i class="fa fa-search"></i>
          <% end %>
        </span>
      </div>
    <% end %>
    <ul class="sidebar-menu">
      <li class="header">MAIN NAVIGATION</li>
      <li class="<%='active' if current_page?(dashboard_path) %>">
        <%=link_to "   Dashboard", dashboard_path, :class=>"fa fa-home"%>
      </li>
      <li class="treeview">
        <a href="#">
          <i class="fa fa-user"></i>
          <span>Taxpayers</span>
          <i class="fa fa-angle-left pull-right"></i>
        </a>
        <ul class="treeview-menu">
          <li><a href="/taxpayers/delinquent"><i class="fa fa-user"></i> Delinquent</a></li>
          <li><a href="pages/charts/flot.html"><i class="fa fa-circle-o"></i> Flot</a></li>
          <li><a href="pages/charts/inline.html"><i class="fa fa-circle-o"></i> Inline charts</a></li>
        </ul>
      </li>

      <li class="treeview">
        <a href="#">
          <i class="fa fa-compass"></i>
          <span>Businesses</span>
          <i class="fa fa-angle-left pull-right"></i>
        </a>
        <ul class="treeview-menu">
          <li><a href="/businesses/registered"><i class="fa fa-check"></i> Registered</a></li>
          <li><a href="pages/charts/flot.html"><i class="fa fa-circle-o"></i> Delinquent</a></li>
          <li><a href="pages/charts/inline.html"><i class="fa fa-try"></i> Not Registered</a></li>
        </ul>
      </li>

      <li class="<%='active' if current_page?(reports_path) %>">
        <%=link_to "   Reports", reports_path, :class=>"fa fa-list"%>
      </li>
    </ul>
  </section>
</aside>

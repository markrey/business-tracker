<div class='col-md-6'>
  <div class="panel panel-default">
  <div class="panel-heading">Employee Details</div>
    <div class="panel-body">
      <%=simple_form_for @user do |f| %>
      <%=f.error_notification %>
        <%=f.input :first_name %>
        <%=f.input :last_name %>
        <%=f.input :email %>
         <%= f.select :role, User.roles.keys.map {|role| [role.titleize,role,  class: 'form-control']} , as: :radio_buttons%>
        <%=f.input :password %>
        <%=f.input :password_confirmation %>
        <div class="modal-footer">
          <%=f.submit%>
        </div>
      <% end %>
    </div>
  </div>
</div>

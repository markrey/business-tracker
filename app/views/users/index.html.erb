<div class="container">
<div class="row col-md-8">
  <h2>List of Employees</h2>

  <div class="panel panel-default">
    <div class="panel-body">
      <table class="table table-hover">
        <thead>
          <tr>
             <th>Name</th>
             <th>Email</th>
             <th>Role</th>
             <th>Status</th>
          </tr>
        </thead>
        <tbody>
           <% @users.each do |user| %>
             <tr>
               <td><%=user.first_name %></td>
               <td><%=user.email %></td>
               <td><%=user.role %></td>
             </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  </div>
  <div clas="row">
  <%=link_to 'New Employee', new_user_path %>

  </div>
</div>

<div class="col-md-4 col-md-offset-4">
<div class="panel panel-default">
<div class="panel-heading">Sign in</div>
<div class="panel-body">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :url => session_path(resource_name),
       wrapper_mappings: {boolean: :vertical_boolean }) do |f| %>
       <%= f.input :email, label: false do %>
  <div class="input-group">
    <%= f.input_field :email, class: 'form-control input-lg', placeholder: 'Email' %>
    <span class="input-group-addon glyphicon glyphicon-user"></span>
  </div>
  <% end %>

    <%= f.input :password, label: false do  %>
    <div class="input-group">
      <%=f.input_field :password, class: 'form-control input-lg', placeholder: 'Password' %>
      <span class="input-group-addon glyphicon glyphicon-lock"></span>
    </div>
    <small class="help-text"><%= render "devise/shared/links" %></small>
    <% end %>

    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <hr>

    <%= f.button :submit, "Sign in", class: "btn btn-default" %>
<% end %>
<br>
</div>

</div>
</div>

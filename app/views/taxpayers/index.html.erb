<div class="col-md-10 col-md-offset-2">
<% if Taxpayer.count.zero? %>
  <p class="alert alert-info">
     No taxpayers are registered yet.
    <%=link_to "Add New Taxpayer", new_taxpayer_path, class: "btn btn-link" %></p>


<% else %>
<div class="well well-sm">
<%=link_to 'New Tax', new_tax_path, class: 'btn btn-primary' %>

  <%=link_to ' New Taxpayer', new_taxpayer_path, class: "btn btn-primary fa fa-user" %>
  <%=link_to ' Import Data', new_taxpayer_path, class: "btn btn-default fa fa-user" %>
  <%=link_to ' Export Data (Excel File)', new_taxpayer_path, class: "btn btn-default fa fa-user" %>
</div>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Date Registered</th>
            <th>Address</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% @taxpayers.each do |taxpayer| %>
            <tr>
              <td><%=link_to taxpayer.full_name, taxpayer, class: 'btn btn-link'%></td>
              <td><%=taxpayer.created_at.strftime('%B %d %Y')%></td>
              <td><%=taxpayer.address.try(:street) %></td>
              <td><%=taxpayer.workflow_state %></td>
              <td>
                <div class="btn-group">
                  <button type="button" class="glyphicon glyphicon-cog" data-toggle="dropdown" data-toggle="tooltip" title="More User Actions">
                  </button>
                  <ul class="dropdown-menu pull-right" role="menu">
                    <li><%= link_to ' Pay Taxes', new_taxpayer_payment_path(taxpayer), class: 'fa fa-android' %></li>
                    <li><%= link_to ' New Cedula', new_taxpayer_business_path(taxpayer), class: 'fa fa-android' %></li>
                    <li><%= link_to ' New Business', new_taxpayer_business_path(taxpayer), class: 'fa fa-android' %></li>
                  </ul>
                </div>
              </td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
   </div>
</div>
<% end %>
